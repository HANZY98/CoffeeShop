@page
@model Razor_temp.Pages.Categories.CreateModel
@{
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $("#lettersOnlyField").on("input", function () {
                var inputText = $(this).val();
                var pattern = /^[A-Za-z]+$/; // Only letters (both uppercase and lowercase)

                if (!pattern.test(inputText)) {
                    // Display an error message or prevent form submission
                    alert("Please enter only letters.");
                    $(this).val(""); // Clear the input field
                }
            });
        });
    </script>
}

<div class="container">
    <h1 class="text-center">Create Category</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Category.Name"></label>
                    <input type="text" class="form-control" asp-for="Category.Name" id="lettersOnlyField" required>
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category.DisplayOrder"></label>
                    <input type="number" class="form-control" asp-for="Category.DisplayOrder" required>
                    <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
                </div>
                <br></br>
                <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-primary ml-1 pull-right" asp-area="" asp-page="Index">Go Back</a>
            </form>
        </div>
    </div>
</div>



