@model ShoppingCart  

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Product.ImageURL" class="img-fluid" alt="@Model.Product.Title">
        </div>
        <div class="col-md-6">
            <h2>@Model.Product.Title</h2>
            <p>@Model.Product.Description</p>
            <p>Price: $@Model.Product.Price</p>

            <form asp-action="Details" asp-controller="Shop" method="post">
                <input type="hidden" asp-for="Product_Id" />
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input asp-for="Count" type="number" name="Count" value="1" min="1" />
                </div>
                
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>

            <a asp-controller="Shop"  asp-action="Index" class="btn btn-secondary">Back to Products</a>
        </div>
    </div>
</div>